<%- include('../../partials/head.ejs')  %> 

    <div class="container mt-3 mb-3">
		<div class="row">
			<div class="col-md-6 offset-md-3">
				<div class="card card-body">
					<h2>Sine In Your Account</h2>
					<form action="/auth/sinein" method="POST" class="p-3">
						<div class="form-group">
						  <label for="validationServer02" class="form-label">Email</label>
						  <input type="email" class="form-control <%= errors.email ? 'is-invalid' : '' %> " id="validationServer02" name="email">
						  <div class="invalid-feedback">
								<%= errors.email && errors.email %> 
						  </div>
						</div>
						<div class="form-group">
							<label for="validationServer02" class="form-label">Password</label>
							<input type="password" class="form-control <%= errors.password ? 'is-invalid' : '' %> " id="validationServer02" name="password">
							<div class="invalid-feedback">
							  <%= errors.password && errors.password%> 
							</div>
						</div>
						<div class="col-12 mt-3">
						  <button class="btn btn-primary" type="submit">Sine In</button>
						</div>
					</form>
					<center><a href="/auth/sineup" class="my-3">You don't have account?Please Sine Up</a></center>
				</div>
			</div>
		</div>
    </div>

<%- include('../../partials/footer.ejs')  %> 
    
</body>
</html>